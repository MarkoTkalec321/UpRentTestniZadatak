<UserControl x:Class="UpRentTestniZadatak.View.UserControls.UserActionButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UpRentTestniZadatak.View"
             mc:Ignorable="d" 
             Height="30" Width="330">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
        <Button Content="Dodaj" Width="100" Margin="5" Click="AddButton_Click"/>
        <Button Content="Izmjeni" Width="100" Margin="5" Click="EditButton_Click"/>
        <Button Content="Izbriši" Width="100" Margin="5" Click="DeleteButton_Click"/>
    </StackPanel>
</UserControl>
